<VirtualHost *:80>
  ServerName sample.yad
  DocumentRoot /var/www/sample/
  Options Indexes FollowSymLinks

  <Directory "/var/www/sample/">
    AllowOverride All
    <IfVersion < 2.4>
      Allow from all
    </IfVersion>
    <IfVersion >= 2.4>
      Require all granted
    </IfVersion>
  </Directory>
</VirtualHost>
